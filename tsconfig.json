{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "ES2017",
    "rootDir": "src/",
    "outDir": "dist/",
    "jsx": "react",
    "lib": ["ES2017", "dom"],
    "types": ["react"],
    "baseUrl": "./",
    "paths": {
      "@src-root/*": ["src/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "typings"]
}
